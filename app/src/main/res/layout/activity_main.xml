<?xml version="1.0" encoding="utf-8"?>
<!--
    This is the main layout for our app.
    CoordinatorLayout allows different UI elements to interact with each other,
    for example, making the toolbar hide when you scroll.
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBarLayout is the container for the toolbar at the top. -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- This is our actual toolbar, which will show the app's title. -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Signal Intel" />

        <!-- This will hold our "Wi-Fi" and "Bluetooth" tabs. -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.appbar.AppBarLayout>

    <!--
        ViewPager2 is a modern and efficient component that manages the
        swiping between pages (our Wi-Fi and Bluetooth fragments).
        The 'layout_behavior' attribute connects it to the AppBarLayout,
        enabling smooth scrolling.
    -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
